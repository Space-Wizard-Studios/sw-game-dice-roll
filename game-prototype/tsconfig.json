{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "lib": [
      "es2020",
      "es2021",
      "esnext",
      "dom"
    ],
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "ESNext",
    "types": [
      "vite/client"
    ],
    "baseUrl": "./",
    "outDir": "dist",
    "paths": {
      "@components/*": [
        "src/components/*"
      ],
      "@example/*": [
        "src/example/*"
      ],
      "@game/*": [
        "src/game/*"
      ],
      "@helpers/*": [
        "src/helpers/*"
      ],
      "@layouts/*": [
        "src/layouts/*"
      ],
      "@stores/*": [
        "src/stores/*"
      ],
      "@styles/*": [
        "src/styles/*"
      ],
      "types/*": [
        "src/types/*"
      ],
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src",
    "*.astro",
    "*.tsx"
  ],
}
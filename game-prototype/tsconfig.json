{
  "compilerOptions": {
    "lib": [
      "ES2023",
      "DOM"
    ],
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "dist",
    "strict": true,
    "allowJs": true,
    "baseUrl": "./",
    "paths": {
      "@components/*": [
        "src/components/*"
      ],
      "@config/*": [
        "src/config/*"
      ],
      "@helpers/*": [
        "src/helpers/*"
      ],
      "@layouts/*": [
        "src/layouts/*"
      ],
      "types/*": [
        "src/types/*"
      ],
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "src/types/**/*"
  ],
}
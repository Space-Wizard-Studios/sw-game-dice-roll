{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "skipLibCheck": true,
    "lib": [
      "es2020",
      "es2021",
      "esnext",
      "dom"
    ],
    "module": "ES2022",
    "moduleResolution": "node",
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "ES2022",
    "types": [
      "astro/client",
    ],
    "baseUrl": ".",
    "outDir": "dist",
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      }
    ],
    "paths": {
      "@components/*": [
        "src/components/*"
      ],
      "@example/*": [
        "src/example/*"
      ],
      "@scenes/*": [
        "src/scenes/*"
      ],
      "@helpers/*": [
        "src/helpers/*"
      ],
      "@layouts/*": [
        "src/layouts/*"
      ],
      "@models/*": [
        "src/models/*"
      ],
      "@stores/*": [
        "src/stores/*"
      ],
      "@styles/*": [
        "src/styles/*"
      ],
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "*.astro",
    "*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
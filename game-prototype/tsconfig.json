{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "rootDir": "./",
  },
  "include": [
    "src/**/*",
    "types/**/*"
  ],
  "paths": {
    "@game/*": [
      "src/game/*"
    ],
    "types/*": [
      "src/types/*"
    ],
    "@/*": [
      "src/*"
    ]
  }
}